                <!-- Table Start -->
                <div class="container-fluid pt-4 px-4">
                    <div class="col-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Products</h6>
                            <div class="table-responsive">
                                <table class="table" id="myDataTable">
                                    <thead>
                                        <tr>
                                            <th scope="col">Name</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">Edit</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(products.length> 0) { %>
                                            <% for(let i=0; i < products.length; i++) { %>
                                                <tr>
                                                    <td>
                                                        <%= products[i].name %>
                                                    </td>
                                                    <td>
                                                        <img src="/images/<%= products[i].image[0] %>"
                                                            class="img-sm img-thumbnail" alt="" width="60px"
                                                            height="50px">
                                                    </td>
                                                    <td>
                                                        <%= products[i].category %>
                                                    </td>
                                                    <td>
                                                        <%= products[i].price %>
                                                    </td>
                                                    <td>
                                                        <% if (products[i].isListed) { %>
                                                            <span class="badge bg-success">Listed</span>
                                                            <% } else { %>
                                                                <span class="badge bg-danger">Unlisted</span>
                                                                <% } %>
                                                    </td>
                                                    <td>
                                                        <%= products[i].stockQuantity %>
                                                    </td>
                                                    <td>
                                                        <a href="/admin/editProducts/<%= products[i]._id %>">
                                                            <button class="btn btn-outline-primary"
                                                                type="submit">Edit</button>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-outline-success"
                                                            onclick="toggleProductStatus('<%= products[i]._id %>')">
                                                            <%= products[i].isListed ? 'Unlist' : 'List' %>
                                                        </button>
                                                    </td>
                                                </tr>
                                                <% } %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="9">Category Not Found</td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Table End -->



                <%- include('../layout/adminLayouts/footer') -%>
                    <!-- Add this script at the end of your HTML file or in a separate JavaScript file -->
                    <script>
                        // Function to toggle the product status (list/unlist)
                        async function toggleProductStatus(productId) {
                            try {
                                const response = await fetch(`/admin/products/${productId}`, {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                });

                                const data = await response.json();

                                if (data.status) {
                                    // Reload the page or update the UI as needed
                                    location.reload();
                                } else {
                                    // Handle the error, display a message, or log the error
                                    console.error('Failed to toggle product status:', data.message);
                                }
                            } catch (error) {
                                // Handle fetch errors
                                console.error('Fetch error:', error);
                            }
                        }



                        // Search jQuery for the table and navbar
                        $(document).ready(function () {
                            // When the user types in either search box
                            $("#navbar-search, #name-search").on("keyup", function () {
                                var searchText = $(this).val().toLowerCase();

                                // Loop through each table row
                                $("table tbody tr").each(function () {
                                    var productName = $(this).find("td:eq(0)").text().toLowerCase(); // Get the product name in lowercase

                                    // If the product name contains the search text, show the row; otherwise, hide it
                                    if (productName.includes(searchText)) {
                                        $(this).show();
                                    } else {
                                        $(this).hide();
                                    }
                                });
                            });
                        });
                    </script>